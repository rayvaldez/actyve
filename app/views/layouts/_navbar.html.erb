    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="<%= activities_path %>">
        <!-- <img src="assets/actyvelogo.png" width="40" height="40" class="d-inline-block align-top" alt=""> -->
