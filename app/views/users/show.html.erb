<div class="index">
  <h1><%= current_user.username %></h1>

  <br>

  <h4>Total Activities</h4><%= @activities.size %>

  <br>

  <h4>Total Activity Time</h4><%= distance_of_time_in_words(((@activities.sum(:hour) * 60) + (@activities.sum(:minute))).minutes) %>

  <br>

  <h4>Total Calories Burned</h4><%= @activities.sum(:calories) %>

  <br>

  <h4>Last 3 activities</h4><ul><% @activities.last(3).each do |activity| %>
    <li><%= link_to activity.exercise.name %> - <%= activity.title %> posted on <%= activity.created_at.strftime("%B %d, %Y") %></li>
    <% end %>
  </ul>
</div>
