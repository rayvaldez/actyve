<h1>Sign Up</h1>

<% if @user.errors.any? %>

  <h3>
    <%= pluralize(@user.errors.count, "error") %>
    prohibited this activity from being saved:
  </h3>

  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@user) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign Up" %>

<% end %>
