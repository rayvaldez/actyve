<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="text-center">
      <img src="images/actyve.png" width="250" height="220">
      <h1 style="color: #cacaca">Sign Up</h1>

      <%= form_for(@user) do |f| %>

        <p style="color: #cacaca">

          <%= render partial: 'layouts/errors', locals: {object: @user} %>

          <%= f.label :username %>
          <%= f.text_field :username %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

        </p>

          <br><br>

          <%= f.submit "Sign Up" %>

      <% end %>
    </div>
  </div>
</div>
